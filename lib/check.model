#!/bin/bash
# @author Mateusz Machalica

[[ $# -ne 1 ]] && exit 1

rm -f *.pml.trail

case $1 in
  1) opts="-N mutual_exclusion" ;;
  2) opts="-f -N inevitable_anteroom" ;;
  3) opts="-f -N exit_anteroom" ;;
  4) opts="-f -N liveness" ;;
  5) opts="-N linear_wait" ;;
  *) exit 1 ;;
esac

./pan -m100000000 -w28 -n -a $opts

