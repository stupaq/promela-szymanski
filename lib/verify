#!/bin/bash
# @author Mateusz Machalica

set -e

if [[ $# -lt 1 || $1 -lt 1 || $1 -gt 5 ]]; then
  echo "Bad argument"
  exit 1
fi

rm -f _spin_nvr.tmp pan pan.* *.trail

model=`find . -name "*.pml" | head -1`
sopts="-DLTL_$1 -DEPILOG_${2:-321}"
popts="-f"

spin -a $sopts $model
gcc -O2 -o pan pan.c
./pan -m10000000 -w26 -n -a $popts

